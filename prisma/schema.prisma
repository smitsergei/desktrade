generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String?  @unique
  username  String   @unique
  password  String?
  createdAt DateTime @default(now()) @map("created_at")

  settings        UserSettings?
  weeklyEntries   WeeklyEntry[]
  weekendTasks    WeekendTask[]

  @@map("users")
}

model UserSettings {
  id             String    @id @default(cuid())
  userId         String    @unique @map("user_id")
  deposit        Decimal   @default(1000) @map("deposit") @db.Decimal(15, 2)
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_settings")
}

model WeeklyEntry {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  date      DateTime @db.Date
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tickers Ticker[]

  @@unique([userId, date])
  @@map("weekly_entries")
}

model Ticker {
  id               String    @id @default(cuid())
  weeklyEntryId    String    @map("weekly_entry_id")
  ticker           String
  rating           Int
  predictionPrice  Decimal   @map("prediction_price") @db.Decimal(5, 4)
  type             String    @db.VarChar(20) // 'pre_market' or 'after_market'
  status           String    @default("pending") @db.VarChar(20) // 'pending', 'won', 'lost', 'cancelled'
  actualResult     Decimal?  @map("actual_result") @db.Decimal(5, 4)
  confidenceLevel  Int       @map("confidence_level")
  notes            String?
  createdAt        DateTime  @default(now()) @map("created_at")
  resolvedAt       DateTime? @map("resolved_at")

  weeklyEntry   WeeklyEntry    @relation(fields: [weeklyEntryId], references: [id], onDelete: Cascade)

  @@map("tickers")
}

model WeekendTask {
  id           String   @id @default(cuid())
  userId       String   @map("user_id")
  weekStartDate DateTime @db.Date @map("week_start_date")
  text         String
  done         Boolean  @default(false)
  priority     Int      @default(1) @db.SmallInt // 1 - низкий, 2 - средний, 3 - высокий
  order        Int      @default(1) // Порядок в пределах группы приоритета
  createdAt    DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("weekend_tasks")
}
